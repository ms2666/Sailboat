function [weight] = calculateWeight(p1Coords, p1, p2Coords, p2, nodeMatrix, stepSize, landCoords)
% just calculate distance for now
latDiff = p1Coords(1) - p2Coords(1);
lonDiff = p1Coords(2) - p2Coords(2);
weight = sqrt(lonDiff^2 + latDiff^2);

% if the path from p1 to p2 contains land, increase weight
if nodeMatrix(p1, 4) || nodeMatrix(p2, 4)
    weight = weight*((stepSize+1)^10);
    %     weight = 0;
end

% check if there is an intersection between land and the line formed by p1
% and p2
landLats = landCoords(:, 1);
landLons = landCoords(:, 2);


end